// @include "sys.ul"

@const STDIN 0;
@const STDOUT 1;
@const SYS_WRITE 4;


let strlen(s: char *): int => {
    let i: int => 0;
    while s[i] => {i => i+1;}
    return i;
}

class string => {
    public contents: char *,
    public length: int,

    public string(c: char*, l: int): Self => {
        self::contents => c;
        self::length => l;
    },

    public string(c_str: char *): Self => {
        self::contents => c_str;
        self::length => strlen(c_str);
    }
}

let write(fd: int, ptr: char*, len: int): int => {
    return syscall(SYS_WRITE, fd, ptr, len);
}

let print(s: string): void => {
    write(STDOUT, s::contents, s::length);
}

let println(s: string): void => {
    print(s);
    print("\n");
}

let main(): void => {
    println("Hello, World !");
}
